{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "declaration": true,
    "declarationDir": "./types",
    "baseUrl": "./",
    "paths": {
      "@styles/*": ["styles/*"],
      "@public/*": ["public/*"],
      "@services/*": ["services/*"],
      "@components/*": ["components/*"],
      "@models/*": ["models/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"],
      "@lib/*": ["lib/*"],
      "@handlers/*": ["handlers/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
